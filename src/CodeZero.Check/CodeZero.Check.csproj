<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <AssemblyName>CodeZero.Check</AssemblyName>
    <PackageId>CodeZero.Check</PackageId>
    <!--Change this {Version} if you fix a bug or add a new rule, for shipping new package.-->
    <PackageVersion>6.0.1</PackageVersion>
    <Version>6.0.1</Version>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Description>Useful of checks of common guard extensions can help you make checks easier</Description>
    <PackageDescription>Useful of checks of common guard extensions can help you make checks easier</PackageDescription>
    <PackageTags>.net core;guard;check;best-practices</PackageTags>
