{
  "DebugConfig": {
    "CaptureStartupErrors": true,
    "DetailedErrorsKey": true,
    "SensitiveDataLogging": true,
    "EnableDetailedErrors": true,
    "DisplayFullErrorStack": true,
    "MiniProfilerEnabled": true, // /profiler/results-index /profiler/results-list /profiler/results
    "SerilogSelfLog": false
  },
  "ConnectionStrings": {
    "MariaDB": {
      "DefaultConnection": "Server=localhost; Port=3306; Database=lookup_service; Uid=root; Pwd=root; SslMode=Preferred;"
    }
  },
  "ServiceSettings": {
    "DisplayName": "CodeZeroTemplate",
    "DefaultCulture": "en",
    "DefaultApiVersion": {
      "Major": 1,
      "Minor": 0,
      "Status": ""
    },
    "InitializeDatabase": false,
    "EnableAuthentication": false,
    "EnableApiKey": false,
    "EnableSwagger": true,
    "EnableSerilog": true,
    "EnableSeq": true,
    "EnableHealthChecks": true,
    "EnableLocalization": true,
    "EnableDataProtection": false,
    "EnableHttpsRedirection": true,
    "RoutingLowercaseUrls": false,
    "EnableResponseCompression": false,
    "EnableSessionAndCookies": false,
    "EnableReverseProxy": false,
    "EnableCors": false,
    "EnableRedis": false,
    "EnableMemoryCache": false,
    "EnableIpRateLimiting": false,
    "EnableClientRateLimiting": false,
    "EnableRateLimitingRedis": false,
    "EnableExceptional": false,
    "EnableAntiforgery": false,
    "EnableMvc": false
  },
  "Exceptional": {
    "Store": {
      "ApplicationName": "CodeZeroTemplate",
      "Type": "Memory", // Memory, MySQL, SQL
      "ConnectionString": "Server=localhost; Port=3306; Database=CodeZeroTemplate_exceptional; Uid=root; Pwd=root; SslMode=Preferred;"
    }
  },
  "CorsSettings": {
    "DefaultCorsPolicy": "AllowAny",
    "CorsPolicy": [
      {
        "PolicyName": "AllowAny",
        "AllowAnyHeader": true,
        "AllowAnyMethod": true,
        "AllowAnyOrigin": true
      },
      {
        "PolicyName": "AllowAllFromLocalhost",
        "Headers": "*",
        "Methods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS", "HEAD", "PATCH" ],
        "Origins": [ "https://localhost:4200" ],
        "SupportsCredentials": true,
        "PreflightMaxAge": "1728000"
      }
    ]
  },
  "HeadersConfig": {
    "XFrameOptions": "SAMEORIGIN",
    "XContentTypeOptions": "1",
    "XssProtection": "nosniff"
  },
  "SwaggerConfig": {
    "UiEndpoint": "swagger",
    "RouteTemplate": "swagger/{documentName}/swagger.json",
    "RoutePrefix": "swagger.json",
    "AuthorizationUrl": "http://localhost:8080/auth/realms/master/protocol/openid-connect/",
    "Scopes": [],
    "DefaultModelsExpandDepth": 1
  },
  "SwaggerInfo": {
    "Title": "CodeZeroTemplate Dev",
    "Description": "CodeZeroTemplate Swagger",
    "Contact": {
      "Name": "Nasr Aldin",
      "Email": "nasr2ldin@gmail.com",
      "Url": "https://nasraldin.com"
    },
    "TermsOfService": "https://gitlab.com/nasraldin/codezero",
    "License": {
      "Name": "MIT License",
      "Url": "https://gitlab.com/nasraldin/codezero"
    }
  },
  "HealthChecksUI": {
    "UiEndpoint": "/healthy-ui",
    "HeaderText": "CodeZeroTemplate - Health Checks Status",
    "EnableDatabaseStorage": false,
    "DisableMigrations": false,
    "StorageConnectionString": "Server=localhost; Port=3306; Database=health_checks; Uid=root; Pwd=root; SslMode=Preferred;",
    "HealthChecks": [
      {
        "Name": "CodeZeroTemplate API",
        "Uri": "/healthy"
      }
    ],
    "EvaluationTimeinSeconds": 1000,
    "MaximumHistoryEntriesPerEndpoint": 60,
    "ApiMaxActiveRequests": 1,
    "MinimumSecondsBetweenFailureNotifications": 1000,
    "Checks": {
      "Database": false,
      "DbContext": false,
      "Redis": false,
      "Seq": true
    }
  },
  "MiniProfilerConfig": {
    "RouteBasePath": "/profiler",
    "Storage": "MemoryCache", // default (MemoryCache) - MemoryCache, MySql, SqlServer, Redis
    "ConnectionString": "Server=localhost; Port=3306; Database=mini_profilers; Uid=root; Pwd=root; SslMode=Preferred;"
  },
  "SeqOptions": {
    "Endpoint": "http://localhost:5341",
    "ApiKey": "none"
  }
}
